<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system, basic, detailed, grid, video">

		<image name="logo">
			<path>./system-logo-gray-${langue}.png</path>
			<default>./system-logo-gray-us.png</default>
		</image>

	</view>

	<view name="system">

		<!-- Sytem LOGO -->
		<image name="logo-color" extra="true">
			<path>./system-logo-${langue}.png</path>
			<default>./system-logo-us.png</default>
		</image>

		<!-- Sytem AVATAR -->
		<image name="avatar" extra="true">
			<rotation>90</rotation>
		</image>

		<!-- Sytem DESCRIPTION -->
		<image name="synopsys" extra="true">
			<path>./description-${langue}.png</path>
			<default>./description-us.png</default>
		</image>
		
		<!-- Sytem INFO -->
		<image name="info" extra="true">
			<path>./info-${langue}.png</path>
			<default>./info-us.png</default>
		</image>
		
		<!-- Sytem CONSOLE -->
		<image name="console" extra="true">
			<path>./console-${langue}.png</path>
			<default>./console-us.png</default>
		</image>

	</view>

</theme>
