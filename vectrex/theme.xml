<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./system-logo-gray.png</path>
		</image>
	</view>

	<view name="system">

		<!-- Sytem AVATAR -->
		<image name="avatar" extra="true">
			<rotation>90</rotation>
		</image>
		
		<!-- Sytem DESCRIPTION -->
		<image name="synopsys" extra="true">
			<path>./description-${langue}.png</path>
			<default>./description-us.png</default>
		</image>
		
		<!-- Sytem INFO -->
		<image name="info" extra="true">
			<path>./info-${langue}.png</path>
			<default>./info-us.png</default>
		</image>
		
	</view>

</theme>
